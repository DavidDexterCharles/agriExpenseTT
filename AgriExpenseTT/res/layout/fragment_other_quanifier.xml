<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_newPurchase_other"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_newPurchase_other_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Purchasing"
            android:textColor="#999999"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_newPurchase_other_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Enter the thing you are paying for e.g.Gravel, Backhoe service"
            android:textColor="#cccccc"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_newPurchase_other_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_error_newpurchase_other_resource"
            android:textColor="#FF0000"
	             android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_newPurchase_other_quantifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Enter the measurement for what you are buying e.g.hours, bags, litres"
            android:textColor="#cccccc"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_newPurchase_other_quantifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_error_newpurchase_other_quantifer"
            android:layout_marginLeft="20dp"
            android:textColor="#FF0000"
	             android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/btn_newPurchase_other_done"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_custom"
            android:text="Done" />
    </LinearLayout>

</ScrollView>
