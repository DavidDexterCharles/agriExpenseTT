<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollcyclelast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/newCycleLastcont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
			<TextView
			    android:id="@+id/tv_newCycle_error"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/txt_new_cycle_placeholder"
			    android:textColor="#FF0000"
			    android:visibility="gone" />
        </FrameLayout>

	    <LinearLayout
	         android:id="@+id/lowerCont_newCycle"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
                <TextView
                    android:id="@+id/tv_newCyclelast_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/label_dataentry_margin"
                    android:text="@string/txt_new_cycle_name"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/list_reuse_description"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:id="@+id/et_newCycleLast_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/label_dataentry_margin"
                    android:ems="10"
                    android:hint="@string/hint_new_cycle_name"
                    android:inputType="text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/label_dataentry_margin" />
	
	            <TextView
	                android:id="@+id/tv_newCyclelast_landQty"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:layout_marginRight="20dp"
	                android:layout_marginTop="@dimen/label_dataentry_margin"
	                android:text="@string/txt_new_cycle_land_quantity"
	                android:textColor="@color/primary_text"
	                android:textSize="@dimen/list_reuse_description"
                    android:layout_gravity="center_horizontal" />
	
	            <EditText
	                android:id="@+id/et_newCycleLast_landqty"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:layout_marginRight="20dp"
	                android:layout_marginTop="@dimen/label_dataentry_margin"
	                android:ems="10"
	                android:hint="@string/hint_new_cycle_land_quantity"
	                android:inputType="numberDecimal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/label_dataentry_margin" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/tv_cycUseItem_sub1_2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="20dp"
	                android:layout_marginRight="20dp"
	                android:layout_marginTop="@dimen/label_dataentry_margin"
	                android:text="@string/txt_new_cycle_date"
	                android:textColor="@color/primary_text"
	                android:textSize="17sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/label_dataentry_margin" />
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" >
	
	                <Button
	                    android:id="@+id/btn_newCycleLast_date"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="20dp"
	                    android:layout_marginRight="20dp"
	                    android:layout_marginTop="@dimen/label_dataentry_margin"
	                    android:background="@drawable/btn_custom"
	                    android:text="@string/btn_new_cycle_date" />

                </LinearLayout>
	        </LinearLayout>
	
	        <Button
	            android:id="@+id/btn_newCyclelast_dne"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginTop="30dp"
	            android:background="@drawable/btn_custom"
	            android:text="@string/btn_new_cycle_save" />
	    </LinearLayout>
    </LinearLayout>

</ScrollView>
